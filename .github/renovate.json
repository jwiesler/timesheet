{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "enabledManagers": [
        "cargo"
    ],
    "extends": [
        "config:recommended"
    ],
    "updatePinnedDependencies": false,
    "lockFileMaintenance": {
        "enabled": false
    },
    "patch": {
        "enabled": false
    },
    "packageRules": [
        {
            "automerge": true,
            "matchUpdateTypes": [
                "major",
                "minor",
                "patch"
            ]
        }
    ]
}
